{% extends "fibeWWWConfBundle::base.html.twig" %}


{% block title %}Login to enter into schedule admin area{% endblock title %}





{% block body %}
 
  {# S'il y a une erreur, on l'affiche dans un joli cadre #}
  {% if error %}
    <div class="alert alert-error">{{ error.message }}</div>
  {% endif %}
 
  {# Le formulaire, avec URL de soumission vers la route « login_check » comme on l'a vu #}
  <div class="hero-unit">
        <h1>SWC event linker</h1>
        <p>This app has been made to manage a conference using SWC ontology.</p>
  </div>
  <div class="container"> 
        <form   action="{{ path('login_check') }}" method="post">
            <label for="username">Login :</label>
            <input type="text" id="username" name="_username" value="{{ last_username }}" />

            <label for="password">Password :</label>
            <input type="password" id="password" name="_password" />
            <br />
            <input class="btn btn-success" type="submit" value="Connexion" />
        </form>
  </div>
         
    
  
 
{% endblock %}
